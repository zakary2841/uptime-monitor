{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
	"types": ["node"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
	"skipLibCheck": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}